<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include ('./partials/head.ejs') %>
  </head>
  <body>

    <h1 class="display-2 text-center"><%=stuff.name; %></h1>

<div class="card">
     <img class="card-img-top img-thumbnail" src="<%=stuff.image%>">
 <div class="card-body">
    <p class="text-center"> <%=stuff.description%></p>
     <p class="text-center">$<%=stuff.price%></p>

     <% if(stuff.qty === 0){%>
       Out of stock
    <%}else{%>
  <p class="text-center">Quanity: <%=stuff.qty%></p>

    <%
    }
    %>
</div>
<div class="d-flex flex-row bd-highlight mb-3 justify-content-around">


    <%
     if(stuff.qty > 0){%>
       <form action="/baking/<%=stuff._id%>/buy?_method=PUT" method="POST">

         <input class="btn btn-outline-info"  type="submit" value="BUY">
       </form>
    <%
     }
     %>

     <a  class="btn btn-outline-info" href="/baking">Main Page</a>

     <form action="/baking/<%=stuff._id; %>?_method=DELETE" method="post">
       <input class="btn btn-outline-info" type="submit" value="Delete">
     </form>

       <a class="btn btn-outline-info"href="/baking/<%=stuff._id%>/edit">Edit</a>

    </div>
  </body>
</html>
